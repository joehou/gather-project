<!DOCTYPE html>
<html>
<head>
    <title>gather</title>
    <link rel="icon" type="image/ico" href="img/favicon.ico">
    <link href="https://fonts.googleapis.com/css?family=Work+Sans:400,500,600" rel="stylesheet">
    <link rel='stylesheet' href='stylesheets/reset.css' />
    <link rel='stylesheet' href='stylesheets/style.css' />
</head>
<body>
<div id="title-container">
    <a href="/">
        <img src="img/logo.svg" alt="logo" />
        <div id="title">gather</div>
    </a>
</div>
<div class="create-container">
    <div class="create-card">
        <div class="create-column">
            <img id="created-image" src="" />
        </div>
        <div class="divider">
        </div>
        <div class="create-column">
            <!-- Add your title code here: -->
            Create a New
            <form class="input-form" action="/items/create" method="post" >
                <!-- Add your form elements here -->
                <input id="title-input" name="title" type="text" value="{{newItem.title}}">
                {{#with newItem.errors.title as |error|}}
                    <span class="error">{{error.message}}</span>
                {{/with}}
                <input id="description-input" name="description"  type="text" value="{{newItem.imageUrl}}">
                {{#with newItem.errors.description as |error|}}
                    <span class="error">{{error.message}}</span>
                {{/with}}
                <textarea id="imageUrl-input" name="imageUrl" >{{newItem.description}}</textarea>
                {{#with newItem.errors.imageUrl as |error|}}
                    <span class="error">{{error.message}}</span>
                {{/with}}

                <button id="submit-button" name="submit-button"  type="submit">
                    <p>Submit</p>
                </button>
            </form>
        </div>
    </div>
</div>
<script>
    var img = document.getElementById('created-image');
    function handleChange(e) {
        var path = e.target.value.match(/^(https*:\/\/)/i) ? '' : 'http://';
        img.src = path + e.target.value;
    }
    document.getElementById('imageUrl-input').oninput = handleChange;
</script>
</body>
</html>
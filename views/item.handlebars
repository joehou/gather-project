<div id="item-{{item._id}}" class="item-card">
    <a href="/items/{{item._id}}">
        <img class="item-img" src="{{item.imageUrl}}">
        <div class="image-overlay">
            <div class="overlay-button delete-button">
                <form id="delete-{{item._id}}" class="delete-form" action="/items/{{item._id}}/delete" method="post">
                    <img src="/img/delete.svg" alt="delete">
                    <p>Delete</p>
                </form>
            </div>
            <div class="overlay-button view-button">
                <a href="/items/{{item._id}}">
                    <img src="/img/view.svg" alt="view">
                    <p>View</p>
                </a>
            </div>
        </div>
        <div class="item-title">
            <p>{{item.title}}</p>
        </div>
        <div id="item-description" class="single-item-description">
            <p>{{item.description}}</p>
        </div>

    </a>
</div>